<% @page_title = "User Login" %>

<div class="login">
  <h2 style="margin-left:28%">Please Login or Create a new User </h2>
  <hr>
  <%= form_tag(:action => 'attempt_login', :class => "form-horizontal") do %>
      <table class="table table-bordered">
        <tr>
          <th><%= label_tag(:username) %></th>
          <td><%= text_field_tag(:username)%></td>
        </tr>
        <tr>
          <th><%= label_tag(:password) %></th>
          <td><%= password_field_tag(:password) %></td>
        </tr>
      </table>
            <div style="margin-left:35%">
              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
              <%= label_tag(:remember_me) %></div>

            <%= submit_tag("Log In",:class => "btn btn-primary",:style=>"margin-left:35%") %>
  
            <%= link_to "Sign Up".html_safe, new_user_path, :class => "btn btn-primary"%>
<% end %>

</div>
