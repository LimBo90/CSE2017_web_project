<% @page_title = "User Login" %>

<div class="login">
  <h2 style="margin-left:28%">Please Login or Create a new User </h2>
  <hr>
  <%= form_tag(:action => 'attempt_login') do %>
      <table class="table table-bordered">
        <tr>
          <td><%= label_tag(:username) %></td>
          <td><%= text_field_tag(:username) %></td>
        </tr>
        <tr>
          <td><%= label_tag(:password) %></td>
          <td><%= password_field_tag(:password) %></td>
        </tr>
        </table>
          <td><%= submit_tag("Log In",:class => "btn btn-primary",:style=>"margin-left:35%") %>
  
            <%= link_to "Sign Up".html_safe, new_user_path, :class => "btn btn-primary"%></td>
        </tr>
      

<% end %>
</div>
