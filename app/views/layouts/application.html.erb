<!DOCTYPE html>
<html>
<head>
  <title>CSE2017 | <%= @page_title %></title>
  <%= stylesheet_link_tag('application', :media => 'all') %>
</head>
<body>
<div id="header">
  <h1>CSE2017 Project</h1>
</div>
<div id="main">
  <%if session[:user_id]%>
      <ul>
        <%= link_to(session[:username], user_path(session[:user_id])) %>,
        <%= link_to("Logout", :action => 'logout') %></li>
      </ul>
  <% end %>
  <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
  <% end %>
  <div id="content">
    <%= yield %>
  </div>
</div>
</body>
</html>
