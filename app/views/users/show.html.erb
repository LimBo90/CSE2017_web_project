<% @page_title = "User Details" %>

<div class="user show">
  <h2>User Details</h2>

  <table summary="User detail view">
    <tr>
      <th>User Name</th>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <th>First Name</th>
      <td><%= @user.first_name %></td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td><%= @user.last_name %></td>
    </tr>
    <tr>
      <th>Email Address</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>Birth Date</th>
      <td><%= (@user.birth_date).to_s(:long_ordinal) %></td>
    </tr>
    <tr>
      <th>Registered</th>
      <td><%= (@user.created_at).to_s(:long_ordinal) %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= (@user.updated_at).to_s(:long_ordinal) %></td>
    </tr>
  </table>
  <% if @user.id == session[:user_id]%>
      <b><%= link_to("<button>Edit Details</button>".html_safe,edit_user_path(@user.id)) %></b>
      <b><%= link_to "<button>Delete</button>".html_safe, user_path(@user.id), method: :delete, data: { confirm: "Are you sure you want to delete this user #{@user.username}?" }%></b>
  <% end %>
</div>
