<% @page_title = "Change Password" %>
<%= error_messages_for(@user) %>
<div class="users change password">
  <%= form_for(:user, :url => {:action => 'attempt_update_password', :id => @user.id}) do |f| %>
      <table>
        <tr>
          <th><%= f.label(:current_password) %></th>
          <td><%= f.password_field(:current_password) %></td>
        </tr>
        <tr>
          <th><%= f.label(:password, "New Password") %></th>
          <td><%= f.password_field(:password) %></td>
        </tr>
        <tr>
          <th><%= f.label(:password_confirmation, "New Password Confirmation") %></th>
          <td><%= f.password_field(:password_confirmation) %></td>
        </tr>
        <tr>
          <td>&nbsp;</td>
          <div class="form-buttons">
            <td><%= submit_tag("Change Password") %></td>
          </div>
  <% end %>
  </tr>
  </table>


</div>
