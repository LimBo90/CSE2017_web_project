<%= error_messages_for(@user) %>

<table summary="User form fields">
  <tr>
    <th><%= f.label(:username, "Username") %></th>
    <td><%= f.text_field(:username) %></td>
  </tr>
  <tr>
    <th><%= f.label(:first_name, "First Name") %></th>
    <td><%= f.text_field(:first_name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:last_name, "Last Name") %></th>
    <td><%= f.text_field(:last_name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:email, "Email Address") %></th>
    <td><%= f.text_field(:email) %></td>
  </tr>
  <tr>
    <th><%= f.label(:email_confirmation, "Email Confirmation") %></th>
    <td><%= f.text_field(:email_confirmation) %></td>
  </tr>
  <tr>
    <th><%= f.label(:password) %></th>
    <td><%= f.password_field(:password) %></td>
  </tr>
  <tr>
    <th><%= f.label(:password_confirmation) %></th>
    <td><%= f.password_field(:password_confirmation) %></td>
  </tr>
  <tr>
    <th><%= f.label :birthday, "Birth Date" %></th>
    <td><%= f.date_select(:birth_date, :order => [:day, :month, :year], :start_year => Date.today.year - 100, :end_year => Date.today.year)%></td>
  </tr>
</table>