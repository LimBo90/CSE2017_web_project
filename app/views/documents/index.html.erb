<% @page_title = "Documents" %>

<div class="documents index">
  <h2>Documents</h2>


  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Subject", new_document_path, :class => 'action new') %>

  <div><%= pluralize(@documents.size, 'document') %> found</div>
  <table class="listing" summary="document list">
    <tr class="header">
      <th>Name</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @documents.each do |document| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= document.name %></td>
          <td class="center"> 15 </td>
          <td class="actions">
            <%= link_to("Show", document_path(id: document.id), :class => 'action show') %>
            <%= link_to("Edit", edit_document_path(id: document.id), :class => 'action edit') %> <!--TODO: edit only if uploader.id == user.id -->
            <%= link_to("Delete", delete_document_path(id: document.id), :class => 'action delete') %>
            <%= link_to "Download", document.attachment_url, class: 'action download' %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
