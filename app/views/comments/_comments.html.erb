<h2><u><b>Comments:</b></u></h2>
<table>
<% @comments.each do |comment| %>
<tr> 
	<td><b><%= link_to(comment.user.username, user_path(comment.user_id),)%>:</b> <%= comment.text %></td>
</tr>
<tr>
	<td> <%= "<small><b>Created at: </b> #{comment.created_at}</small>".html_safe %>
<% if comment.created_at != comment.updated_at %>
      <%= "<small><b>updated at: </b> #{comment.updated_at}</small>".html_safe %>
    <% end %>
      <% if comment.user == @current_user%>
      <br>
          <b><%= link_to("Edit".html_safe, [:edit, @commentable, comment])%></b>
         <b><%= link_to "Delete".html_safe, [@commentable, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %></b>
         
      <% end %>
      <hr>
    </td>
 </tr>
 <% end %>
</table>