<% @page_title = "#{@document.name}" %>

<%= link_to("<< Back to List", documents_path, :class => 'back-link') %>

<div class="pages index">
  <h2><%= @document.name %></h2>
  <ul id="grid" class="rig columns-3">
    <% @pages.each do |page| %>
        <%= link_to image_tag(page.link_to_image , size: '150x150'), document_page_path(document_id: @document.id, id: page.id) %>
        <%= page.position %>    <!-- TODO: fix grid style -->
    <% end %>
  </ul>

  </div>